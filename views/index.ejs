<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <h1><%= title %></h1>

  <a href="/new">Write a new message</a>

  <ul>
    <% messages.forEach(function(message, index) { %>
      <li>
        <strong><%= message.user %></strong>: <%= message.text %> <br>
        <small><%= message.added.toLocaleString() %></small>
        <br>
        <a href="/message/<%= index %>">Open</a>
      </li>
      <hr>
    <% }) %>
  </ul>
</body>
</html>
